@using nOAuth.AuthorizationServer.Helpers
@model nOAuth.AuthorizationServer.Controllers.LoginModel
@{
    ViewBag.Title = "登陆";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>课程首页</title>
    <link href="@(ConfigHelper.Static)css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="@(ConfigHelper.Static)css/login.css" rel="stylesheet" type="text/css" />
    <link href="@(ConfigHelper.Static)css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css" />
    <!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
</head>
<body>
    @using (Html.BeginForm(new { ViewBag.ReturnUrl }))
    {  
        <div class="box">
            <div class="login-form">
                <div class="logo">
                    <img src="@(ConfigHelper.Static)img/icon/066.png">
                </div>
                <div class="alert @(Model == null || !Model.IsError ? "hide" : "") text-center" id="error">
                    @Html.ValidationSummary(true)
                </div>
                <div class="login-user">
                    <div class="user-icon">
                    </div>
                    <div class="user-input">
                        @Html.TextBoxFor(m => m.UserName)
                    </div>
                </div>
                <div class="login-password">
                    <div class="password-icon">
                    </div>
                    <div class="password-input">
                        @Html.PasswordFor(m => m.Password)
                    </div>
                </div>
                <div class="login-landing">
                    <a href="#" id="login">登 陆</a></div>
            </div>
        </div>
    }
    <script src="@(ConfigHelper.Static)scripts/jquery-1.9.1.min.js" type="text/javascript"></script>
    <script src="@(ConfigHelper.Static)scripts/login.js" type="text/javascript"></script>
    <script src="@(ConfigHelper.Static)scripts/jquery.form.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('#login').click(function () {
                $('form').submit();
            });
            $('form input').bind('keypress', function (e) {
                if (e.keyCode == 13) {
                    $('#login').trigger('click');
                }
            });
        });
    </script>
</body>
</html>
